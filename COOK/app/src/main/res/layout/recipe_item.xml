<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewRecipeOverview"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="food picture"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/textViewRecipeName"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageViewRecipeOverview"
        android:layout_alignRight="@+id/imageViewRecipeOverview"
        android:layout_alignBottom="@+id/imageViewRecipeOverview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="278dp"
        android:layout_marginBottom="110dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewPreparationTime"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageViewRecipeOverview"
        android:layout_alignRight="@+id/imageViewRecipeOverview"
        android:layout_alignBottom="@+id/imageViewRecipeOverview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="278dp"
        android:layout_marginBottom="74dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewCookingTime"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageViewRecipeOverview"
        android:layout_alignRight="@+id/imageViewRecipeOverview"
        android:layout_alignBottom="@+id/imageViewRecipeOverview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="278dp"
        android:layout_marginBottom="37dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewRecipeType"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageViewRecipeOverview"
        android:layout_alignRight="@+id/imageViewRecipeOverview"
        android:layout_alignBottom="@+id/imageViewRecipeOverview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="278dp"
        android:layout_marginBottom="1dp"
        android:text="TextView" />

</RelativeLayout>